# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = spaces
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.go]
indent_style = tab

[*.sh,*.zsh,*.bash]
indent_size = 2

[Makefile,*.mkf]
indent_style = tab
